<?xml version='1.0' encoding='utf-8'?>
<widget id="com.invessence" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Invessence</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>


<preference name="SplashScreen" value="screen" />


<preference name="ShowSplashScreenSpinner" value="false"/>

<preference name="AutoHideSplashScreen" value="false" />
<preference name="SplashScreenDelay" value="500000" />
<preference name="DisallowOverscroll" value="true" />


    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    

<platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
<platform name="android">
              <icon src="resource/Android/res/drawable-ldpi/icon.png" density="ldpi" />
              <icon src="resource/Android/res/drawable-mdpi/icon.png" density="mdpi" />
              <icon src="resource/Android/res/drawable-hdpi/icon.png" density="hdpi" />
              <icon src="resource/Android/res/drawable-xhdpi/icon.png" density="xhdpi" />
     </platform>
<platform name="android">
    <!-- you can use any density that exists in the Android project -->
    <splash src="resource/Android/res/drawable-land-hdpi/screen.png" density="land-hdpi"/>
    <splash src="resource/Android/res/drawable-land-ldpi/screen.png" density="land-ldpi"/>
    <splash src="resource/Android/res/drawable-land-mdpi/screen.png" density="land-mdpi"/>
    <splash src="resource/Android/res/drawable-land-xhdpi/screen.png" density="land-xhdpi"/>

    <splash src="resource/Android/res/drawable-hdpi/screen.png" density="port-hdpi"/>
    <splash src="resource/Android/res/drawable-ldpi/screen.png" density="port-ldpi"/>
    <splash src="resource/Android/res/drawable-mdpi/screen.png" density="port-mdpi"/>
    <splash src="resource/Android/res/drawable-mdpi/screen.png" density="port-xhdpi"/>
</platform>
<platform name="ios">
    <!-- iOS 8.0+ -->
    <!-- iPhone 6 Plus  -->
    <icon src="resource/iOS/Resources/icons/Icon-180@3x.png" width="180" height="180" />
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon src="resource/iOS/Resources/icons/Icon-60.png" width="60" height="60" />
    <icon src="resource/iOS/Resources/icons/Icon-120.png" width="120" height="120" />
    <!-- iPad -->
    <icon src="resource/iOS/Resources/icons/Icon-76.png" width="76" height="76" />
    <icon src="resource/iOS/Resources/icons/Icon-152.png" width="152" height="152" />
    <!-- iOS 6.1 -->
    <!-- Spotlight Icon -->
    <icon src="resource/iOS/Resources/icons/Icon-40.png" width="40" height="40" />
    <icon src="resource/iOS/Resources/icons/Icon-80.png" width="80" height="80" />
    <!-- iPhone / iPod Touch -->
    <icon src="resource/iOS/Resources/icons/Icon.png" width="57" height="57" />
    <icon src="resource/iOS/Resources/icons/Icon-114.png" width="114" height="114" />
    <!-- iPad -->
    <icon src="resource/iOS/Resources/icons/Icon-72.png" width="72" height="72" />
    <icon src="resource/iOS/Resources/icons/Icon-72@2x.png" width="144" height="144" />
    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="resource/iOS/Resources/icons/Icon-29.png" width="29" height="29" />
    <icon src="resource/iOS/Resources/icons/Icon-58.png" width="58" height="58" />
    <!-- iPad Spotlight and Settings Icon -->
    <icon src="resource/iOS/Resources/icons/Icon-50.png" width="50" height="50" />
    <icon src="resource/iOS/Resources/icons/Icon-100.png" width="100" height="100" />
</platform>
<platform name="ios">
    <!-- images are determined by width and height. The following are supported -->
    <splash src="resource/iOS/Resources/splash/Default~iphone.png" width="320" height="480"/>
    <splash src="resource/iOS/Resources/splash/Default@2x.png" width="640" height="960"/>
    <splash src="resource/iOS/Resources/splash/Default-Portrait.png" width="768" height="1024"/>
    <splash src="resource/iOS/Resources/splash/Default-Portrait@2x.png" width="1536" height="2048"/>
    <splash src="resource/iOS/Resources/splash/Default-Landscape~ipad_1024x768.png" width="1024" height="768"/>
    <splash src="resource/iOS/Resources/splash/Default-Landscape@2x.png" width="2048" height="1536"/>
    <splash src="resource/iOS/Resources/splash/Default-568h@2x.png" width="640" height="1136"/>
    <splash src="resource/iOS/Resources/splash/Default-667h@2x.png" width="750" height="1334"/>
    <splash src="resource/iOS/Resources/splash/Default-Portrait-736h@3x-1242X2208.png" width="1242" height="2208"/>
    <splash src="resource/iOS/Resources/splash/Default-Landscape-736h@3x2208x1242.png" width="2208" height="1242"/>
</platform>
</widget>
