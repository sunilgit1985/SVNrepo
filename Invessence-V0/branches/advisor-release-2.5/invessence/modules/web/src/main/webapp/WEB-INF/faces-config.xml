<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">
    <application>
        <resource-bundle>
            <base-name>messages</base-name>
            <var>msgs</var>
        </resource-bundle>
    </application>
    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>
   <!-- Basic Info -->

   <managed-bean>
        <managed-bean-name>userBean</managed-bean-name>
        <managed-bean-class>com.invessence.bean.UserBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>userInfoDAO</property-name>
            <value>#{userInfoDAO}</value>
        </managed-property>
        <managed-property>
            <property-name>messageText</property-name>
            <property-class>com.invessence.util.EmailMessage</property-class>
            <value>#{emailMessage}</value>
        </managed-property>
   </managed-bean>

   <managed-bean>
        <managed-bean-name>resetPasswordData</managed-bean-name>
        <managed-bean-class>com.invessence.data.ResetPasswordData</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>userInfoDAO</property-name>
            <value>#{userInfoDAO}</value>
        </managed-property>
        <managed-property>
            <property-name>messageText</property-name>
            <property-class>com.invessence.util.EmailMessage</property-class>
            <value>#{emailMessage}</value>
        </managed-property>
   </managed-bean>
   <managed-bean>
        <managed-bean-name>messageBean</managed-bean-name>
        <managed-bean-class>com.invessence.bean.MessageBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>messageText</property-name>
            <property-class>com.invessence.util.EmailMessage</property-class>
            <value>#{emailMessage}</value>
        </managed-property>
   </managed-bean>

   <!-- Client Take On Process-->
      <navigation-rule>
        <from-view-id>/signup.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{userBean.signUp2}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/signupApproval.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{userBean.signUp2}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/error.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>
